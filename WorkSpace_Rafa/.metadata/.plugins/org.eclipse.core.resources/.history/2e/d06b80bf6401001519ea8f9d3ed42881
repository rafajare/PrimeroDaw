package ejercicio2;

public class ReservaCaza extends Parque{

	private String arma;
	private double coste;
	
	public ReservaCaza(double km_, String nombre_,int numEspecies_, String arma_, double coste_){
		super(km_,nombre_,numEspecies_);
		arma=arma_;
		coste=coste_;
		}
	
	
	public String getArma() {
		return arma;
	}
	public void setArma(String arma) {
		this.arma = arma;
	}
	public double getCoste() {
		return coste;
	}
	public void setCoste(double coste) {
		this.coste = coste;
	}
	
	public String toString(){
		return super.getInfo() + "\nArma utilizada: "+getArma()+"\nCoste del parque: "+getCoste()+"euros.";
	}
	
}